<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        style="@style/LoginCreateText"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_or_sign_in_with" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_sign_in_with_google"
            android:background="@drawable/circle_white"
            android:layout_width="@dimen/login_social_button_size"
            android:layout_height="@dimen/login_social_button_size"
            android:padding="11dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/google_logo"/>

        <ImageView
            android:id="@+id/button_sign_in_with_facebook"
            android:background="@drawable/circle_white"
            android:layout_width="@dimen/login_social_button_size"
            android:layout_height="@dimen/login_social_button_size"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/facebook_logo"/>

        <ImageView
            android:id="@+id/button_sign_in_with_twitter"
            android:background="@drawable/circle_white"
            android:layout_width="@dimen/login_social_button_size"
            android:layout_height="@dimen/login_social_button_size"
            android:padding="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/twitter_logo"/>
    </LinearLayout>
</LinearLayout>